<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/upload_fragment"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/upload_fragment"
        android:name="ru.svolf.anonfiles.presentation.upload.UploadFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_upload"/>

    <fragment
        android:id="@+id/infoFragment"
        android:name="ru.svolf.anonfiles.presentation.info.InfoFragment"
        android:label="@string/title_info"
        tools:layout="@layout/fragment_info">
        <deepLink
            android:autoVerify="true"
            app:action="ACTION_VIEW"
            app:mimeType="*/*"
            app:uri="https://anonfiles.com/{file_id}/.*" />
        <argument
            android:defaultValue=""
            android:name="file_id"
            app:argType="string" />
    </fragment>

</navigation>